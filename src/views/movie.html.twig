{% extends "base.html.twig" %}

{% block title %}Movies{% endblock %}

{% block head %}

{% endblock %}

{% block content %}

<h1>{{movie.title}} ({{movie.date | date('d/m/Y')}})</h1>
<small>
</small>
<p>{{movie.genre.name}}</p>
<div>
    <img src="{{movie.coverImage}}" width="100">
</div>
<h2>Directeur</h2>
<p>{{movie.director.lastName}}</p>

<h2>Acteurs</h2>
<p>
{% for acteur in movie.acteurs %}
    <strong>{{acteur.lastName}}</strong>
    {{acteur.firstName}} </br>
    {% endfor %}
</p>

<h2>Description</h2>
<p> {{movie.description}}</p>

{% endblock %}